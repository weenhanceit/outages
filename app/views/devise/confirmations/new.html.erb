<h2>Resend confirmation instructions</h2>

<%= bootstrap_form_with(model: resource,
      as: resource_name,
      url: confirmation_path(resource_name),
      html: { method: :post },
      local: true) do |f| %>
      <%= devise_error_messages!(:confirmation_token) %>

  <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email,
          autofocus: true,
          value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions">
    <%= f.primary "Resend confirmation instructions",
          class: "btn btn-primary btn-block" %><br/>
  </div>
<% end %>

<%= render "devise/shared/links" %>
