<h2>Sign up</h2>

<%= bootstrap_form_with(model: resource,
      as: resource_name,
      url: registration_path(resource_name),
      local: true) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, id: :user_email %>
  </div>

  <div class="field">
    <%#= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", id: :user_password, label: password_label %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,
          autocomplete: "off",
          id: :user_password_confirmation,
          label_class: "required" %>
  </div>

  <div class="actions">
    <%= f.primary "Sign up", class: "btn btn-primary btn-block" %><br/>
  </div>
<% end %>

<%= render "devise/shared/links" %>
