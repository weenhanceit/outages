<h2>Forgot your password?</h2>

<%= bootstrap_form_with(model: resource,
      as: resource_name,
      url: password_path(resource_name),
      html: { method: :post },
      local: true) do |f| %>
      <%= devise_error_messages!(:reset_password_token) %>

  <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.primary "Send me reset password instructions",
          class: "btn btn-primary btn-block" %><br>
  </div>
<% end %>

<%= render "devise/shared/links" %>
