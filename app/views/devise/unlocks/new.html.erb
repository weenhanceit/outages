<h2>Resend unlock instructions</h2>

<%= bootstrap_form_with(model: resource,
      as: resource_name,
      url: unlock_path(resource_name),
      html: { method: :post },
      local: true) do |f| %>
  <%= devise_error_messages!(:unlock_token) %>

  <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.primary "Resend unlock instructions",
          class: "btn btn-primary btn-block" %><br/>
  </div>
<% end %>

<%= render "devise/shared/links" %>
