<div class="mb-3">
  <h3>Filters</h3>
</div>
<%= form_with url: "#",
      method: :get,
      html: { class: "js-submit-on-change" } do |f| %>
<div class="form-group">
  <%= label_tag "text" do %>
  Text
  <%= text_field_tag "text",
          search_string,
          class: "form-control" %>
  <% end %>
</div>
<div class="form-group">
  <div class="form-check">
    <%= label_tag :watching,
          value: "Interested",
          class: "form-check-label" do %>
      <%= radio_button_tag :watching,
            of_interest,
            of_interest?,
            class: "form-check-input" %> Of interest to me<% end %>
  </div>
  <div class="form-check">
    <%= label_tag :watching,
          value: "All",
          class: "form-check-label" do %>
      <%= radio_button_tag :watching,
            "All",
            !of_interest?,
            class: "form-check-input" %> All<% end %>
  </div>
</div>
<% end %>
