<!DOCTYPE html>
<html>
  <head>
    <%= render "head" %>
  </head>

  <body>
    <%= render "header" %>

    <div class="container">
      <div class="row">
        <div class="col-md-9 border-right">
          <%= yield %>
        </div>
        <div class="col-md-3">
          <div class="row<%= ' border-bottom mb-3' if content_for?(:filter) -%>">
            <div class="col">
              <%= yield :filter %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-md-12">
              <%= render partial: "notifications/active"  %>
              <%# # , locals: { active_notifications: current_user.active_notifications } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render "footer" %>
  </body>
</html>
