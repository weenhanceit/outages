<%= bootstrap_form_with(model: watch,
      format: :js,
      id: "js-watch-row-#{row_index}",
      class: "js-submit-on-change") do |f| %>
  <%= f.hidden_field :watched_type %>
  <%= f.hidden_field :watched_id %>
  <%= f.hidden_field :user_id %>
  <%= hidden_field_tag "row_index", row_index %>
  <%# UGH: A place to keep the label for when we go to the watches_controller. %>
  <%= hidden_field_tag "label", @label %>
  <%= f.check_box(:active, label: @label || "", hide_label: @label.blank?, id: "ci_watches_attributes_0_active") %>
<% end %>
